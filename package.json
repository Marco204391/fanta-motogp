{
  "name": "fanta-motogp-backend",
  "version": "1.0.0",
  "description": "Backend API per Fanta MotoGP",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon backend/src/server.ts",
    "start": "node backend/dist/server.js",
    "build:frontend": "cd webapp && npm install && npm run build",
    "build:backend": "npx prisma migrate deploy --schema=./backend/prisma/schema.prisma && npx prisma generate --schema=./backend/prisma/schema.prisma && tsc --project backend/tsconfig.json",
    "vercel-build": "npm run build:frontend && npm run build:backend",
    "prisma:generate": "npx prisma generate --schema=./backend/prisma/schema.prisma",
    "prisma:migrate": "npx prisma migrate dev --schema=./backend/prisma/schema.prisma",
    "prisma:studio": "npx prisma studio --schema=./backend/prisma/schema.prisma",
    "prisma:seed": "ts-node backend/prisma/seed.ts",
    "test": "jest",
    "lint": "eslint backend/src/**/*.ts"
  },
  "keywords": [
    "motogp",
    "fantasy",
    "api"
  ],
  "author": "Marco Lecci",
  "license": "ISC",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "prisma": "^6.13.0",
    "redis": "^4.6.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  }
}